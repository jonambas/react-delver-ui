{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "lib": ["es6", "dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": false,
    "resolveJsonModule": true,
    "jsx": "react",
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "lib/**/*.ts"],
  "exclude": ["node_modules"]
}
